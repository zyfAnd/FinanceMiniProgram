.mission_3star, .mission_2star, .mission_1star, .mission_0star {
  background-image: url("http://pcp-guanjiastatics.oss-cn-shanghai.aliyuncs.com/xcx_pass/mission_open.png");
  background-size: cover;
  text-align: center;
}

.mission_3star>.stars>view, .mission_2star>.stars>view:first-child,
.mission_2star>.stars>view:nth-child(2), .mission_1star>.stars>view:first-child {
  width: 20rpx;
  height: 20rpx;
  background-image: url("http://pcp-guanjiastatics.oss-cn-shanghai.aliyuncs.com/xcx_pass/star-open1.png");
  background-size: contain;
  display: inline-flex;
}

.mission_3star>text, .mission_2star>text, .mission_1star>text {
  color: #fff561;
  text-shadow: 5rpx 5rpx 5rpx #ddad45;
}

.mission_2star>.stars>view:last-child, .mission_1star>.stars>view:nth-child(2),
.mission_1star>.stars>view:last-child, .mission_0star>.stars>view {
  background-image: url("http://pcp-guanjiastatics.oss-cn-shanghai.aliyuncs.com/xcx_pass/star-open2.png");
  width: 20rpx;
  height: 20rpx;
  background-size: contain;
  display: inline-flex;
}

.mission_0star>text {
  color: #a4720d;
}

.current {
  width: 100rpx;
  height: 107rpx;
  background-image: url("http://pcp-guanjiastatics.oss-cn-shanghai.aliyuncs.com/xcx_pass/mission_current.png");
  background-size: 25rpx 16rpx;
  background-repeat: no-repeat;
  background-position:bottom center;
  text-align: center;
  padding-top: 6rpx;
  position: absolute;
  top: -105rpx;
  z-index: 999;
}

.userinfo_avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.mission_avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 10rpx solid #fff;
}
