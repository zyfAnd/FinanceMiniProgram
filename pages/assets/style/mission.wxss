/* pages/app/mission/mission.wxss */

.missionbg {
  height: 100%;
  width: 100%;
  background-image: url("http://pcp-guanjiastatics.oss-cn-shanghai.aliyuncs.com/xcx_pass/mission_bg.jpg");
  background-repeat: no-repeat;
  background-size: 100% 100%;
  position: absolute;
  top: 0;
  bottom: 0;
}

.missionroad {
  background-image: url("http://pcp-guanjiastatics.oss-cn-shanghai.aliyuncs.com/xcx_pass/mission_road.png");
  background-size: contain;
  background-repeat: no-repeat;
  width: 600rpx;
  position: absolute;
  top: 60rpx;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

.missionroad>view {
  position: absolute;
  width: 100rpx;
  height: 96rpx;
}

.mission_locked {
  background-image: url(" http://pcp-guanjiastatics.oss-cn-shanghai.aliyuncs.com/xcx_pass/misson_locked.png");
  background-size: cover;
  padding: 10rpx 10rpx 0 0;
}

.mission_locked>.stars>view {
  width: 20rpx;
  height: 20rpx;
  background-image: url("http://pcp-guanjiastatics.oss-cn-shanghai.aliyuncs.com/xcx_pass/star-locked.png");
  background-size: contain;
  display: inline-flex;
}

.mission_locked>.stars, .mission_3star>.stars, .mission_2star>.stars,
.mission_1star>.stars, .mission_0star>.stars {
  display: flex;
  align-items: center;
  justify-content: center;
}

.mission_locked>text {
  color: #797979;
  padding-left: 25rpx;
  font-weight: bold;
}

.mission {
  width: 80rpx;
  height: 80rpx;
  font-weight: bold;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
}

